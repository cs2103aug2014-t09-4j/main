        result = database.getAllTasks();
        assertFalse(result.contains(task3));
        result = database.getAllTasks();
        assertTrue(result.contains(task2));
        result = database.getTasksWithDate(null);
        assertFalse(result.contains(task3));
        database.updateDoneView(true);
