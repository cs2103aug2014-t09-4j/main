        task.setTime("2000");
        task.setEndTime("2100");
        Task mergeThis = new Task();
        mergeThis.setTime("1900");
        mergeThis.setDate("2014-12-14");
        mergeThis.setDescription("aloha");
        mergeThis.setVenue("nowhere");
